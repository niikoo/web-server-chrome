{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": ".",
    "outFile": "./wsc-chrome.js",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "amd",
    "target": "es5",
    "lib": [
      "es2015",
      "es2016",
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "./../../node_modules/@types/"
    ],
    "types": [
      "node",
      "chrome",
      "jquery",
      "jssha"
    ],
    "moduleResolution": "node",
    "paths": {
      "jssha": [
        "./../node_modules/jssha/"
      ]
    }
  },
  "files": [
    "./*.ts"
  ],
  "exclude": [
    "./../../node_modules/**/*",
    "./../../**/*",
    "./../../src/*",
    "./../../src/**/*"
  ]
}
