{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "rootUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "amd",
    "target": "es5",
    "lib": [
      "es7",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "node",
      "chrome"
    ],
    "moduleResolution": "node"
  },
  "files": [
    "buffer.ts",
    "chromesocketxhr.ts",
    "common.ts",
    "connection.ts",
    "encoding.ts",
    "entrycache.ts",
    "handlers.ts",
    "httplib.ts",
    "mime.ts",
    "request.ts",
    "stream.ts",
    "upnp.ts",
    "webapp.ts",
    "websocket.ts",
    "wsc-provider.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
