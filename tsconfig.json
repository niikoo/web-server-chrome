{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "amd",
    "target": "es5",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es6",
      "es7",
      "dom"
    ],
    "typeRoots": [
      "./../../node_modules/@types/"
    ],
    "types": [
      "node",
      "chrome"
    ],
    "paths": {
      "lodash": [
        "./../../node_modules/lodash/"
      ]
    },
    "moduleResolution": "node"
  },
  "files": [
    "buffer.ts",
    "chromesocketxhr.ts",
    "common.ts",
    "connection.ts",
    "encoding.ts",
    "entrycache.ts",
    "handlers.ts",
    "httplib.ts",
    "mime.ts",
    "request.ts",
    "stream.ts",
    "upnp.ts",
    "webapp.ts",
    "websocket.ts",
    "wsc-provider.ts"
  ],
  "exclude": [
    "./../../node_modules/**/*",
    "./../../**/*",
    "./../../src/*",
    "./../../src/**/*"
  ]
}
